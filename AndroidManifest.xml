<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.soundlysleeping"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme.Background" >
        
        <!-- Main Screen Activity -->
        <activity
            android:name="com.example.soundlysleeping.MainScreen"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Theme Screen Activity -->
        <activity
            android:name="com.example.soundlysleeping.ThemeScreen"
            android:configChanges="orientation" >
        </activity>
        
        <!-- Music Player Activity -->
        <activity
            android:name="com.example.soundlysleeping.MusicPlayer"
            android:configChanges="orientation" >
        </activity>
        
        <!-- Alarm Screen Activity -->
        <activity
            android:name="com.example.soundlysleeping.AlarmScreen"
            android:screenOrientation="portrait" >
        </activity>

    </application>

</manifest>
